{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "md3desk",
  "version": "0.1.0",
  "identifier": "com.md3desk.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "md3desk",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "window": {
      "all": true
    }
  }
}