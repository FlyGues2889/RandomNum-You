{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RandomNum-You",
  "version": "1.0.4",
  "identifier": "com.flygues.randomnum-you.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "RandomNum You",
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/appIcon.ico",
      "icons/appIcon.svg"
    ],
    "category": "Utility",
    "shortDescription": "随机数抽取器",
    "longDescription": "使用 Tauri 开发的 Material You 风格的随机数抽取器。",
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": [
          "SimpChinese",
          "English"
        ],
        "displayLanguageSelector": true
      }
    }
  },
  "plugins": {
    "window": {
      "all": true
    }
  }
}