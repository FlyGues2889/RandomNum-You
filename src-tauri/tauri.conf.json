{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "randomnum-you",
  "version": "0.1.0",
  "identifier": "cpm.flygues.random-you.build",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "randomnum-you",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "../src/assets/appIcon.ico",
      "../src/assets/appIcon.svg"
    ]
  }
}