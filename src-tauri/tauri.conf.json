{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "randomnum-you",
  "version": "0.6.1",
  "identifier": "cpm.flygues.random-you.build",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "randomnum-you",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "../src/assets/appIcon.ico",
      "../src/assets/appIcon.svg"
    ],
    "category": "Utility",
    "shortDescription": "随机数抽取器",
    "longDescription": "使用 Tauri 开发的 Material You 风格的随机数抽取器。",
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": [
          "SimpChinese",
          "English"
        ],
        "displayLanguageSelector": true
      }
    }
  }
}